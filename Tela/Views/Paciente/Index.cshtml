@model IEnumerable<Tela.Models.Paciente>

<h2>Lista de Pacientes</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paciente in Model)
        {
            <tr>
                <td>@paciente.Nome</td>
                <td>@paciente.CPF</td>
                <td>@paciente.Telefone</td>
                <td>
                    <a href="@Url.Action("Detalhes", new { id = paciente.Id })">Detalhes</a> |
                    <a href="@Url.Action("Editar", new { id = paciente.Id })">Editar</a> |
                    <a href="@Url.Action("Excluir", new { id = paciente.Id })">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Criar")" class="btn btn-primary">Adicionar Novo Paciente</a>
